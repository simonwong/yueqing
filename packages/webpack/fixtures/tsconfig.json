{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "outDir": "./lib",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Experimental Options */
    "experimentalDecorators": true
  },
  "include": [
    "./src",
    "./types",
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
