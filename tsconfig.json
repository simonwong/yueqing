{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "module": "CommonJS",
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Experimental Options */
    "experimentalDecorators": true
  }
}
