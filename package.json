{
  "name": "yueqing",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "lint": "eslint --ext .js,.ts --format=pretty ./packages",
    "lint:fix": "eslint --fix --ext .js,.ts --format=pretty ./packages"
  },
  "devDependencies": {
    "@yueqing/lint": "^1.3.1",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix --format=pretty"
    ]
  }
}
